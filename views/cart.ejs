    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="basic-booking-info">
            <h2>Booking ID : <%= result[0].booking_id%></h2>
            <h3>Package ID : <%= result[0].package_id%></h3>
            <img src="https://images.freeimages.com/images/large-previews/6d3/entrance-to-amber-palace-1542611.jpg" alt="package-destination-image" class="img-thumbnail">
          </div>
        </div>

        <div class="col-md-4">
          <div class="basic-package-info">
            <h2>Package Name : <%= result[0].package_name %></h2>
            <p><%= result[0].package_desc %></p>
          </div>
        </div>

        <div class="col-md-4">
          <div class="basic-pricing-info">
            <h2>Rate per person : <%= result[0].rate %></h2>
            <h3 id="people-quantity">Number of people : <%= result[0].number_of_people %></h3>
            <h3>Total Cost : Rs.<%= result[0].number_of_people * result[0].rate %></h3>
            <form action="/profile/<%= result[0].username %>/cart" method="POST">
            <div class="form-group">
              <label for="exampleInputName2">Update Number</label>
                <input type="number" class="form-control" id="exampleInputName2" min=1 name="numberOfPeople">
            </div>
            <button class="btn btn-primary" style="margin-bottom: 15px;">Update number</button>
            </form>
            <button class="btn btn-primary">Make Payment</button>

          </div>
        </div>
      </div>
    </div>

    <% include partials/footer %>